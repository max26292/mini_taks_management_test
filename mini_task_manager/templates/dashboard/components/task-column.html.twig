<turbo-frame id="{{ status }}">

    <div class="card">
        <div class="card-header">
            <h4 class="card-title">{{ status }}</h4>
        </div>
        <div class="card-body d-flex flex-column" id="tasks_{{ status|slugify }}">
            {% for task in tasks %}
                <div class="card my-3" id="tasks_{{ task.id }}">
                    <div class="card-header">
                        <div class="d-flex">
                            <div class="me-auto">
                                {{ task.title }}
                            </div>
                            <div class="d-flex btn-group " role="group">
                                    <turbo-frame id="delete_task">
                                        <form action="{{ url('tasks.delete', { id: task.id }) }}" method="post">
                                            <input type="hidden" name="_method" value="DELETE">
                                            {# the argument of csrf_token() is an arbitrary string used to generate the token #}
                                            <input type="hidden" name="token" value="{{ csrf_token('delete-item') }}">

                                            <button type="button" class="btn btn-outline-danger btn-sm me-1" data-id="{{ task.id }}" {{ stimulus_action('task','deleteTask') }}>delete
                                            </button>
                                        </form>
                                    </turbo-frame>
                                    <turbo-frame id="edit_tasks">
                                        <form action="{{ url('tasks.show', { id: task.id }) }}" method="post">
                                            {# the argument of csrf_token() is an arbitrary string used to generate the token #}
                                            <input type="hidden" name="token" value="{{ csrf_token('edit-item') }}">

                                            <button type="button" class="btn btn-outline-primary btn-sm" data-id="{{ task.id }}" {{ stimulus_action('task','showEditModal') }}>
                                                edit
                                            </button>
                                        </form>
                                    </turbo-frame>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <blockquote class="blockquote mb-0">
                            {{ task.description }}
                            <footer class="blockquote-footer mt-2">Created At {{ task.createdAt|date('Y-m-d H:i:s') }}</footer>
                        </blockquote>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>

</turbo-frame>